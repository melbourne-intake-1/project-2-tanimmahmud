
<div class="container">
  <%= simple_form_for(@school) do |f| %>
    <% if @school.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h3><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</h3>

        <ul>
        <% @school.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: 'eg. Coder Factory', class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-group">
          <%= f.label :qualification %>
          <%= f.text_field :qualification, placeholder: 'eg. Bachelor of Computer Science', class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-group">
          <%= f.label :start %>
          <%= f.date_field :start, class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-group">
          <%= f.label :end %>
          <%= f.date_field :end, class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-group">
          <%= f.label :notes %>
          <%= f.text_area :notes, placeholder: '(Optional)', class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-2 actions">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
