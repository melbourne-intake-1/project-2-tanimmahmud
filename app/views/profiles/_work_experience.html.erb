
<% @experiences.each do |experience| %>
  <div class="row work-experience">
    <div class="col-sm-2">
      <div class="img-circle">
        <i class="fa fa-briefcase"></i>
      </div>
    </div>
    <div class="col-sm-10">
      <h4><%= DateTime.parse(experience.from).strftime('%B %Y') %> - <%= DateTime.parse(experience.to).strftime('%B %Y') %></h4>
      <h5><%=  experience.employer %> - <%= experience.job_title %></h5>
      <p><%= markdown experience.responsibilities %></p>
      <% if user_signed_in? %>
        <% if current_user == @profile.user %>
        <p>
          <%= link_to 'Edit Experience', edit_experience_path(experience), method: :get %> |
           <%= link_to 'Delete Experience', experience, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
<div class="pull-right">
  <% if user_signed_in? %>
    <% if current_user == @profile.user %>
      <%= link_to ' + Add New Experience', new_experience_path, method: :get, class: 'btn btn-default btn-xs' %>
    <% end %>
  <% end %>
</div>
