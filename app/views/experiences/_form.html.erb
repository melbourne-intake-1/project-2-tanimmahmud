
<div class="container">
  <%= simple_form_for(@experience) do |f| %>
    <% if @experience.errors.any? %>
      <div id="error_explanation">
        <div  class="alert alert-danger">
          <h3><%= pluralize(@experience.errors.count, "error") %> prohibited this experience from being saved:</h3>

          <ul class="list-unstyled">
          <% @experience.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-group">
          <%= f.label :employer %>
          <%= f.text_field :employer, placeholder: 'eg. Coder Factory', class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-group">
          <%= f.label :job_title %>
          <%= f.text_field :job_title, placeholder: 'eg. Web Developer', class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :from %>
            <%= f.date_field :from, class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :to %>
            <%= f.date_field :to, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-group">
          <%= f.label :responsibilities, 'responsibilities ( * markdown friendly)' %>
          <%= f.text_area :responsibilities, class: 'form-control', rows: 16 %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-2 actions">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
